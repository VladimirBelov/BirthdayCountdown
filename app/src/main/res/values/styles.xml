    <!-- Кнопки ===========================================================================-->

    <style name="ButtonWithIcon">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center|clip_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
<!--        <item name="android:background">@drawable/row_selector</item>-->
        <item name="android:scaleType">fitCenter</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- https://stackoverflow.com/questions/15299508/i-want-to-change-actionbar-icon-size -->
    <style name="ActionButtonCustomStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">30dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">38dp</item>
    </style>

    <!-- https://stackoverflow.com/questions/58292548/options-menu-in-action-bar-displays-option-too-high-up -->
    <style name="OptionsMenuCustomStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor" tools:ignore="NewApi">false</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!--<item name="windowSplashScreenBackground" tools:targetApi="s">@color/dark_green</item>-->
        <item name="windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/anim_startup</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/AppTheme.Black.NoActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

