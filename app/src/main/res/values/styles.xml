<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Зелёная тема ===========================================================================-->

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarSize">48dp</item>
        <item name="actionButtonStyle">@style/ActionButtonCustomStyle</item>
        <item name="actionOverflowMenuStyle">@style/OptionsMenuCustomStyle</item>
        <item name="android:actionButtonStyle">@style/ActionButtonCustomStyle</item>
        <item name="android:alertDialogTheme">@style/AlertDialog.Light</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:itemTextAppearance">@style/itemTextStyle.AppTheme.Light</item>
        <item name="android:listDivider">@color/dark_green_transp</item>
        <item name="android:navigationBarColor">?attr/windowStatusbarColor</item> <!-- Цвет кнопок навигации внизу-->
        <item name="android:textColorPrimary">@color/text_color_primary_light</item>
        <item name="android:textColorSecondary">@color/text_color_secondary_light</item>
        <item name="backgroundColor">@color/white</item>
        <item name="borderWindowColor">@color/dark_green</item>
        <item name="colorAccent">@color/light_green</item> <!-- Цвет вторичных элементов: переключатели в настройках и.т.п. -->
        <item name="colorPrimary">@color/dark_green</item> <!-- Основной цвет: заголовки окон -->
        <item name="colorPrimaryDark">?attr/windowStatusbarColor</item> <!-- Цвет статусной строки -->
        <item name="dialogButtonColor">@color/dark_gray</item>
        <item name="dialogHintColor">@color/light_gray_darker</item>
        <item name="dialogTextColor">@color/dark_gray</item>
        <item name="eventAgeColor">@color/medium_gray</item>
        <item name="eventDateColor">@color/light_gray_darker</item>
        <item name="eventDetailsColor">@color/light_gray_darker</item>
        <item name="eventDistanceColor">@color/light_gray_darker</item>
        <item name="eventFullNameColor">@color/medium_gray</item>
        <item name="listDividerColor">@color/dark_green_transp</item>
        <item name="windowStatusbarColor">@color/darker_green</item>
        <item name="windowTitleColor">@color/white</item>
        <item name="borderCardColor">@color/dark_green</item>
        <item name="gradientStartColor">@color/white</item>
        <item name="gradientCenterColor">@color/dark_green_transp</item>
        <item name="gradientEndColor">@color/dark_green_transp</item>
    </style>

    <style name="itemTextStyle.AppTheme.Light" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Зелёная тема без панели действий  <item name="actionMenuTextColor">@color/white</item>-->
    <style name="AppTheme.Light.NoActionBar" parent="AppTheme.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Меню главной активности -->
    <style name="AppTheme.Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Меню действий -->
    <!--todo: научится ThemeOverlay ставить на onCreate-->
    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Темы диалогов -->
    <style name="AlertDialog.Light" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="textColorAlertDialogListItem">@color/dark_gray</item>
        <item name="android:textColorAlertDialogListItem">@color/dark_gray</item>
        <item name="listDividerColor">@color/dark_green_transp</item>
        <item name="contentDescription">@string/hint_AlertDialog</item>
    </style>

    <!-- Тёмно-серая тема ===========================================================================-->

