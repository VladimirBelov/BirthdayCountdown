<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/windowTitleColor"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imagePhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/widget_Photo"
            android:visibility="gone"
            android:background="?attr/windowTitleColor" />

        <TextView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textStyle="bold"
            android:background="?attr/windowTitleColor"
            android:textColor="?attr/windowTitleTextColor" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="2dp"
        android:background="?attr/listDividerColor" />

    <ListView
        android:id="@+id/menuListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="?attr/listDividerColor"
        android:dividerHeight="1dp" />
</LinearLayout>