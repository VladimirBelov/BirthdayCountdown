<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appwidget_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/appwidget_text"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/appwidget_text"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        tools:ignore="TextContrastCheck" />

    <RelativeLayout
        android:id="@+id/eventInfo0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/widget_Photo"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/iconsView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dip"
            android:layout_marginTop="4dip"
            android:orientation="vertical"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/iconEventType0"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:contentDescription="@string/widget_TypeIcon"
                android:src="@drawable/ic_event_birthday" />

            <ImageView
                android:id="@id/iconFav0"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:contentDescription="@string/widget_FavIcon"
                android:src="@drawable/fav_star" />

            <TextView
                android:id="@+id/iconSilenced0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="start"
                android:shadowColor="@color/dark_gray"
                android:shadowDx="2"
                android:shadowDy="-2"
                android:shadowRadius="2.0"
                android:textColor="@color/green"
                android:textSize="@dimen/widgetDate_fontSize" />

            <TextView
                android:id="@+id/iconZodiac0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:shadowColor="@color/dark_gray"
                android:shadowDx="2"
                android:shadowDy="-2"
                android:shadowRadius="2.0"
                android:textColor="@color/green"
                android:textSize="@dimen/widgetDate_fontSize" />

            <TextView
                android:id="@+id/iconZodiacYear0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:shadowColor="@color/dark_gray"
                android:shadowDx="2"
                android:shadowDy="-2"
                android:shadowRadius="2.0"
                android:textColor="@color/green"
                android:textSize="@dimen/widgetDate_fontSize" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/widget_name_shadow"
            android:contentDescription="@string/widget_FIO"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="1dp"
            android:shadowColor="@color/dark_gray"
            android:shadowDx="2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:singleLine="true"
            android:text="@string/widget_FIO"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/textViewCentered0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/widget_name_shadow"
            android:contentDescription="@string/widget_Date"
            android:gravity="center"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="1dp"
            android:shadowColor="@color/dark_gray"
            android:shadowDx="2"
            android:shadowDy="-2"
            android:shadowRadius="1"
            android:singleLine="true"
            android:text="@string/widget_Date"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/textView2nd0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/textView0"
            android:layout_marginStart="3dip"
            android:background="@color/widget_name_shadow"
            android:contentDescription="@string/widget_FIO"
            android:ellipsize="marquee"
            android:gravity="start"
            android:shadowColor="@color/dark_gray"
            android:shadowDx="2"
            android:shadowDy="-2"
            android:shadowRadius="2.0"
            android:singleLine="true"
            android:text="@string/widget_FIO"
            android:textColor="#ffffffff"
            android:textSize="@dimen/widgetDate_fontSize" />

        <TextView
            android:id="@+id/textView2ndCentered0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/textView0"
            android:layout_marginStart="3dip"
            android:background="@color/widget_name_shadow"
            android:ellipsize="marquee"
            android:gravity="center"
            android:shadowColor="@color/dark_gray"
            android:shadowDx="2"
            android:shadowDy="-2"
            android:shadowRadius="2.0"
            android:singleLine="true"
            android:text="@string/widget_Date"
            android:textColor="#ffffffff"
            android:textSize="@dimen/widgetDate_fontSize" />

        <TextView
            android:id="@+id/textViewAge0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginStart="2dip"
            android:layout_toEndOf="@id/iconsView0"
            android:contentDescription="@string/widget_Age"
            android:gravity="start|top"
            android:shadowColor="@color/dark_gray"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:singleLine="true"
            android:text="@string/widget_Age"
            android:textColor="@color/yellow"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDistance0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="4dip"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:paddingRight="1dp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:singleLine="true"
            android:text="@string/widget_Distance"
            android:textColor="@color/yellow"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

</RelativeLayout>